<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:orientation="vertical"
                android:id="@id/landscapeRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:chillwallpaperproject="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="horizontal"
                android:id="@id/top_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/short_margin"
                android:minHeight="@dimen/toolbar_heigh"
                android:layout_marginStart="@dimen/short_margin"
                android:layout_marginEnd="@dimen/short_margin">
    <TextView android:layout_gravity="top"
              android:id="@id/top_toolbar_simple_settings_button"
              android:text="@string/toolbar_top_simple_settings"
              android:drawablePadding="@dimen/toolbar_drawable_padding"
              chillwallpaperproject:drawableBottomCompat="@drawable/toolbar_top_simple_settings_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
    <TextView android:layout_gravity="top"
              android:id="@id/top_toolbar_store_button"
              android:text="@string/store"
              android:onClick="onClickStoreButton"
              chillwallpaperproject:drawableBottomCompat="@drawable/store_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
  </LinearLayout>
  <LinearLayout android:gravity="center"
                android:orientation="vertical"
                android:id="@id/manualColorsLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/live_time_margin"
                android:layout_below="@id/top_toolbar">
    <LinearLayout android:gravity="center_horizontal"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <Space android:layout_width="0.0dp"
             android:layout_height="1.0dp"
             android:layout_weight="1.0" />
      <ImageButton android:layout_gravity="bottom"
                   android:id="@id/sunriseButton"
                   android:background="@drawable/responsive_button"
                   android:layout_width="28.0dp"
                   android:layout_height="28.0dp"
                   android:src="@drawable/sunrise_icon"
                   android:scaleType="fitCenter"
                   android:adjustViewBounds="true"
                   android:layout_weight="0.1" />
      <Space android:layout_width="0.0dp"
             android:layout_height="1.0dp"
             android:layout_weight="1.0" />
      <TextView android:id="@id/manual_colors_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/liveTime"
                android:layout_weight="0.1"
                android:textAlignment="center"
                chillwallpaperproject:drawableBottomCompat="@drawable/real_time_toggle_icon"
                style="@style/Widget.Chill.TextView.ListItem.Title" />
      <Space android:layout_width="0.0dp"
             android:layout_height="1.0dp"
             android:layout_weight="1.0" />
      <ImageButton android:layout_gravity="bottom"
                   android:id="@id/sunsetButton"
                   android:background="@drawable/responsive_button"
                   android:layout_width="28.0dp"
                   android:layout_height="28.0dp"
                   android:src="@drawable/sunset_icon"
                   android:scaleType="fitCenter"
                   android:adjustViewBounds="true"
                   android:layout_weight="0.1" />
      <Space android:layout_width="0.0dp"
             android:layout_height="1.0dp"
             android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <ImageButton android:layout_gravity="center"
                   android:id="@id/live_time_tooltip"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/tooltip_icon"
                   android:onClick="onclickHelpSettings"
                   android:backgroundTint="@color/transparent" />
      <com.google.android.material.slider.Slider android:value="720"
                            android:layout_gravity="top"
                            android:id="@id/manual_time_slider"
                            android:layout_width="300.0dp"
                            android:stepSize="0.0"
                            android:valueFrom="0"
                            android:valueTo="1440"
                            android:layout_marginEnd="@dimen/layout_padding"
                            chillwallpaperproject:labelBehavior="gone"
                            style="@style/Widget.Chill.Slider" />
      <ImageButton android:layout_gravity="center"
                   android:id="@id/randomTime"
                   android:background="@drawable/responsive_button"
                   android:layout_width="35.0dp"
                   android:layout_height="35.0dp"
                   android:src="@drawable/shuffle_toggle_icon"
                   android:adjustViewBounds="true" />
    </LinearLayout>
    <TextView android:id="@id/clock"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/clock"
              style="@style/Widget.Chill.TextView.Settings.Titles" />
    <com.google.android.material.slider.Slider android:value="0"
                          android:id="@id/slider0"
                          android:visibility="gone"
                          android:stepSize="0.0"
                          android:valueFrom="0"
                          android:valueTo="50"
                          android:layout_marginStart="35.0dp"
                          android:layout_marginEnd="14.0dp"
                          chillwallpaperproject:labelBehavior="gone"
                          style="@style/Widget.Chill.Slider" />
    <com.google.android.material.slider.Slider android:value="0"
                          android:id="@id/slider1"
                          android:visibility="gone"
                          android:stepSize="0.0"
                          android:valueFrom="0"
                          android:valueTo="10"
                          android:layout_marginStart="35.0dp"
                          android:layout_marginEnd="14.0dp"
                          chillwallpaperproject:labelBehavior="gone"
                          style="@style/Widget.Chill.Slider" />
    <com.google.android.material.slider.Slider android:value="0"
                          android:id="@id/slider2"
                          android:visibility="gone"
                          android:stepSize="0.0"
                          android:valueFrom="0"
                          android:valueTo="2"
                          android:layout_marginStart="35.0dp"
                          android:layout_marginEnd="14.0dp"
                          chillwallpaperproject:labelBehavior="gone"
                          style="@style/Widget.Chill.Slider" />
  </LinearLayout>
  <ScrollView android:orientation="vertical"
              android:id="@id/layoutContainer"
              android:scrollbars="none"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/toolbar_clearance"
              android:fillViewport="true"
              android:layout_below="@id/manualColorsLayout"
              android:nestedScrollingEnabled="true">
    <LinearLayout android:orientation="vertical"
                  android:id="@id/recyclerViewContainer"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <FrameLayout android:id="@id/dynamic_content_container"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent" />
      <LinearLayout android:orientation="vertical"
                    android:id="@id/recycler_view_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp"
                  android:textStyle="bold"
                  android:id="@id/scene_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/fujiTitle"
                  android:layout_marginStart="@dimen/layout_margins"
                  style="@style/Widget.Chill.TextView.ListItem.Title" />
        <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal"
                              android:id="@id/scene_recycler_view"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="-24.0dp" />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="-38.0dp">
          <Space android:layout_width="0.0dp"
                 android:layout_height="1.0dp"
                 android:layout_weight="1.0" />
          <TextView android:id="@id/forestModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fujiForest"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:layout_marginStart="@dimen/layout_margins"
                    chillwallpaperproject:drawableTopCompat="@drawable/forest_toggle_icon"
                    style="@style/Widget.Chill.TextView.ListItem.Title" />
          <Space android:layout_width="0.0dp"
                 android:layout_height="1.0dp"
                 android:layout_weight="2.0" />
          <TextView android:id="@id/lakeModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fujiLake"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:layout_marginEnd="@dimen/layout_margins"
                    chillwallpaperproject:drawableTopCompat="@drawable/lake_toggle_icon"
                    style="@style/Widget.Chill.TextView.ListItem.Title" />
          <Space android:layout_width="0.0dp"
                 android:layout_height="1.0dp"
                 android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
                      android:id="@id/random_scene_timer_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/short_margin">
          <LinearLayout android:background="@drawable/transparent_ripple_button_bottom_sheet"
                        style="@style/Widget.Chill.LinearLayout.ListItem.TwoLine.Clickable">
            <ImageView android:src="@drawable/refresh_icon"
                       style="@style/Widget.Chill.ImageView.ListItem.Icon" />
            <LinearLayout style="@style/Widget.Chill.LinearLayout.ListItem.TextBox.Stretch">
              <TextView android:text="@string/random_scene_timer_title"
                        style="@style/Widget.Chill.TextView.ListItem.Title" />
            </LinearLayout>
          </LinearLayout>
          <com.google.android.material.slider.Slider android:value="2"
                                android:layout_gravity="center"
                                android:id="@id/random_scene_slider"
                                android:layout_width="300.0dp"
                                android:layout_height="wrap_content"
                                android:stepSize="1.0"
                                android:valueFrom="0"
                                android:valueTo="9" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
  <LinearLayout android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@id/bottom_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/toolbar_heigh"
                android:layout_marginBottom="@dimen/short_margin"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/toolbar_padding"
                android:layout_marginEnd="@dimen/toolbar_padding">
    <TextView android:id="@id/toolbar_modes_button"
              android:text="@string/ModeCategoryTitle"
              chillwallpaperproject:drawableTopCompat="@drawable/gear_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
    <TextView android:id="@id/toolbar_weather_button"
              android:text="@string/weatherCategoryTitle"
              chillwallpaperproject:drawableTopCompat="@drawable/toolbar_weather_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
    <TextView android:id="@id/hideButton"
              android:text="@string/toolbar_hide"
              chillwallpaperproject:drawableTopCompat="@drawable/visible_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
    <TextView android:id="@id/toolbar_scenes_button"
              android:background="@drawable/responsive_button"
              android:text="@string/toolbar_landscapes"
              chillwallpaperproject:drawableTopCompat="@drawable/landscape_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
    <TextView android:id="@id/toggleButton"
              android:text="@string/toolbar_toggle"
              chillwallpaperproject:drawableTopCompat="@drawable/layers_toggle_icon"
              style="@style/Widget.Chill.TextView.Toolbar.TextView" />
  </LinearLayout>
</RelativeLayout>