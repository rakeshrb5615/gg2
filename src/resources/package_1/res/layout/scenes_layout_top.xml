<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/layout_margins" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout style="@style/Widget.Chill.LinearLayout.ListItem.TwoLine.LessPadding">
    <ImageButton android:id="@id/season_title_icon"
                 android:background="@drawable/responsive_button"
                 android:src="@drawable/season_icon"
                 style="@style/Widget.Chill.ImageView.ListItem.Icon" />
    <LinearLayout style="@style/Widget.Chill.LinearLayout.ListItem.TextBox.Stretch">
      <TextView android:id="@id/seasonTitle"
                android:text="@string/seasonsCategoryTitle"
                style="@style/Widget.Chill.TextView.ListItem.Title" />
      <TextView android:id="@id/seasonSubTitle"
                android:text="@string/seasonsCategoryTitle"
                style="@style/Widget.Chill.TextView.ListItem.Description" />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <ImageButton android:id="@id/autoSeasonButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/auto_season_toggle_icon"
                 android:scaleType="fitCenter"
                 android:adjustViewBounds="true"
                 android:layout_marginStart="@dimen/layout_margins" />
    <View android:id="@id/seasonLine1"
          android:background="@color/transparent_edges"
          android:layout_width="1.0dp"
          android:layout_height="30.0dp"
          android:layout_marginStart="10.0dp" />
    <ImageButton android:id="@id/springButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/spring_toggle_icon"
                 android:layout_marginStart="@dimen/short_margin" />
    <ImageButton android:id="@id/summerButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/sunny_toggle_icon"
                 android:layout_marginStart="20.0dp" />
    <ImageButton android:id="@id/autumnButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/autumn_toggle_icon"
                 android:scaleType="fitCenter"
                 android:layout_marginStart="20.0dp" />
    <ImageButton android:id="@id/winterButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/winter_icon"
                 android:scaleType="fitCenter"
                 android:layout_marginStart="20.0dp" />
    <View android:id="@id/seasonLine2"
          android:background="@color/transparent_edges"
          android:layout_width="1.0dp"
          android:layout_height="30.0dp"
          android:layout_marginStart="10.0dp" />
    <ImageButton android:id="@id/randomSeasonButton"
                 android:background="@drawable/responsive_button"
                 android:layout_width="@dimen/season_button_size"
                 android:layout_height="@dimen/season_button_size"
                 android:src="@drawable/shuffle_toggle_icon"
                 android:scaleType="fitCenter"
                 android:adjustViewBounds="true"
                 android:layout_marginStart="@dimen/short_margin"
                 android:layout_marginEnd="@dimen/layout_margins" />
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:id="@id/random_season_timer_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <LinearLayout android:background="@drawable/transparent_ripple_button_bottom_sheet"
                  android:layout_marginTop="@dimen/short_margin"
                  style="@style/Widget.Chill.LinearLayout.ListItem.TwoLine.Clickable">
      <ImageView android:src="@drawable/refresh_icon"
                 style="@style/Widget.Chill.ImageView.ListItem.Icon" />
      <LinearLayout style="@style/Widget.Chill.LinearLayout.ListItem.TextBox.Stretch">
        <TextView android:text="@string/random_season_timer_title"
                  style="@style/Widget.Chill.TextView.ListItem.Title" />
      </LinearLayout>
    </LinearLayout>
    <com.google.android.material.slider.Slider android:value="2"
                          android:layout_gravity="center"
                          android:id="@id/random_season_slider"
                          android:layout_width="300.0dp"
                          android:layout_height="wrap_content"
                          android:stepSize="1.0"
                          android:valueFrom="0"
                          android:valueTo="9" />
  </LinearLayout>
</LinearLayout>